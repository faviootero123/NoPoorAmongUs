@page
@model SaucyCapstone.Pages.Instructor.Students.Add.addDocumentsModel

<form method="post" enctype="multipart/form-data">
    <input asp-for="StudentDocs.StudentDocId" hidden />
    <input asp-for="StudentDocs.Student" hidden />
    <input asp-for="StudentDocs.AccessType" hidden />

    <div class="card">
        <h4 localize-content class="card-header">Create Document</h4>
        <div class="card-body rounded pb-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row my-1 mb-2 d-flex align-items-center">
                <div localize-content class="col-3 text-end">
                    Topic
                </div>
                <div class="col-9">
                    <div class="form-group">
                        <input asp-for="@Model.StudentDocs.Name" type="text" class="form-control" />
                        <span asp-validation-for="@Model.StudentDocs.Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row my-1 mb-2 d-flex align-items-center">
                <div localize-content class="col-3 text-end">
                    Content
                </div>
                <div class="col-9">
                    <div class="form-group">
                        <textarea asp-for="@Model.StudentDocs.Description" class="form-control"></textarea>
                        <span asp-validation-for="@Model.StudentDocs.Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row my-1 mb-2 d-flex align-items-center">
                <div localize-content class="col-3 text-end">
                    Role Type
                </div>
                <div class="col-9">
                    <div class="form-group">
                        <select asp-for="@Model.SelectedRole" asp-items="@Model.RolesOfUser" class="form-select">
                            <option disabled selected>---Select Role---</option>
                            <span asp-validation-for="@Model.RolesOfUser" class="text-danger"></span>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row my-1 mb-2 d-flex align-items-center">
                <div localize-content class="col-3 text-end">
                    Upload File
                </div>
                <div class="col-9">
                    <div class="form-group">
                        <input asp-for="@Model.StudentDocs.Path" type="file" id="uploadBox" name="file" class="form-control" />
                        <span asp-validation-for="@Model.StudentDocs.Path" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-6">
                    <button localize-content asp-route-id="@Model.StudentId" type="submit" class="btn btn-success" style="width:100%">Create</button>
                </div>
                <div class="col-6">
                    <a localize-content class="btn btn-primary" asp-route-id="@Model.StudentId" asp-page="/Instructor/Students/StudentDocuments" style="width:100%">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <localization-validation-scripts></localization-validation-scripts>
}