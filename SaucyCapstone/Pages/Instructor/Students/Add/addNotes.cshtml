@page
@model SaucyCapstone.Pages.Instructor.Students.Add.addNotesModel

<h1>New Note</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="@Model.Note.NoteId" hidden />
            <input asp-for="@Model.Note.Student.StudentId" hidden />
            <input asp-for="@Model.Note.FacultyMember.FacultyMemberId" hidden />

            <div class="form-group">
                <label asp-for="@Model.Note.Topic" class="control-label"></label>       
                <input asp-for="@Model.Note.Topic" type="text" class="form-control" />
                <span asp-validation-for="@Model.Note.Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Note.Content" class="control-label"></label>
                <textarea asp-for="@Model.Note.Content" class="form-control" ></textarea>
                <span asp-validation-for="@Model.Note.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Note.isPrivate" class="control-label">Private Note</label>
                <input asp-for="@Model.Note.isPrivate" type="checkbox" class="form-check-input">
                <span asp-validation-for="@Model.Note.isPrivate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <button asp-route-id="@Model.StudentId" type="submit" class="btn btn-success">Create</button>
                <a class="btn btn-primary" asp-route-id="@Model.StudentId" asp-page="/Students/StudentNotes" >Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}