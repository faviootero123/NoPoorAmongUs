@page
@model SaucyCapstone.Pages.Instructor.Students.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 localize-content>Student Overview</h2>
        </div>     
    </div>
    <hr />

    <table id="dataTable" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th localize-content>
                    Student Name
                </th>
                <th localize-content>
                    School Level
                </th>
                <th localize-content>
                    IT Level
                </th>
                <th localize-content>
                    English Level 
                </th>
                <th localize-content>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td width="40%">
                        @(student.FirstName + " " + student.LastName)
                    </td>
                    <td width="15%">
                        @student.SchoolLevel
                    </td>
                    <td width="15%">
                        @student.ITLevel
                    </td>
                    <td width="15%">
                        @student.EnglishLevel
                    </td>
                    <td>
                        <div class="btn-group" role="group" style="justify-content:end">
                            <a class="btn btn-success mx-2" asp-route-id="@student.StudentId" asp-page="/Instructor/Students/StudentDetails"><i class="bi bi-clipboard2-fill">&nbsp;</i><localize>Details</localize></a>
                            <a class="btn btn-primary mx-2" asp-route-id="@student.StudentId" asp-page="/Instructor/Students/StudentNotes"><i class="bi bi-pencil-square">&nbsp;</i><localize>Notes</localize></a>
                            <a class="btn btn-info mx-2" asp-route-id="@student.StudentId" asp-page="/Instructor/Students/StudentDocuments"><i class="bi bi-file-earmark-text-fill">&nbsp;</i><localize>Documents</localize></a>
                            <a class="btn btn-warning mx-2" asp-route-id="@student.StudentId" asp-page="/Instructor/Students/StudentCertificates"><i class="bi bi-file-earmark-person">&nbsp;</i><localize>Certifications</localize></a>
                            <a class="btn btn-dark mx-2" asp-route-studentId="@student.StudentId" asp-page="/Instructor/Students/StudentSchedule"><i class="bi bi-calendar">&nbsp;</i><localize>Schedule</localize></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            $('#dataTable').dataTable();
        });
    </script>
}