@page
@model SaucyCapstone.Pages.Applicant.IndexModel
@{
}

@{
    ViewData["Title"] = "Applicant";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Applicant Dashboard</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; New Application
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Status
                </th>
                <th>Application Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Students)
            {
                <tr>
                    <td width="20%">
                        @obj.FirstName
                    </td>
                    <td width="20%">
                        @obj.LastName
                    </td>
                    <td width="25%">
                        @obj.Status
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="Upsert" asp-route-id="@obj.StudentId"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                            @if (obj.Status == Data.Student.StudentStatus.OpenApplication)
                            {
                                <a asp-page="Archive" asp-route-id="@obj.StudentId"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i>Archive</a>
                            }
                            else if (obj.Status == Data.Student.StudentStatus.Denied)
                            {
                                <a asp-page="Archive" asp-route-id="@obj.StudentId"
                           class="btn btn-info mx-2"> <i class="bi bi-trash-fill"></i>Open</a>
                            }

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
