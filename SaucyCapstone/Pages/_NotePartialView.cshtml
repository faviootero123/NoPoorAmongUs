@using Data
@model Note

<div class="category">
	<div class="row">
		<div class="col-12 p-4">
			<div class="row">
				<h4 class="d-flex justify-content-between align-items-center mb-3">
					<span>Note Details</span>
				</h4>
			</div>
			<div class="row my-1">
				<div class="col-3 justify-content-end">Created Date</div>
				<div class="col-6">
					<input asp-for="@Model.CreatedDate" type="text" class="form-control" readonly/>
					<span asp-validation-for="@Model.CreatedDate" class="text-danger"></span>
				</div>
			</div>
			<div class="row my-1">
				<div class="col-3 justify-content-end">Content</div>
				<div class="col-6">
					<textarea asp-for="@Model.Content" class="form-control" readonly></textarea>
					<span asp-validation-for="@Model.Content" class="text-danger"></span>
				</div>
			</div>

		</div>
	</div>
</div>
