@page
@model SaucyCapstone.Pages.Students.Edit.editNotesModel
@{
}

<h1>Edit Note</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@Model.Note.Student.StudentId" asp-for="@Model.NoteEditVM.StudentId" />
            <input type="hidden" value="@Model.Note.NoteId" asp-for="@Model.NoteEditVM.StudentNoteId" />

            <div class="form-group">
                <label asp-for="@Model.NoteEditVM.Topic" class="control-label"></label>       
                <input asp-for="@Model.NoteEditVM.Topic" value="@Model.Note.Topic"  class="form-control" />
                <span asp-validation-for="@Model.NoteEditVM.Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.NoteEditVM.Content" class="control-label"></label>
                <input asp-for="@Model.NoteEditVM.Content" value="@Model.Note.Content" class="form-control" />
                <span asp-validation-for="@Model.NoteEditVM.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                
                <a class="btn btn-primary" asp-route-id="@Model.Note.Student.StudentId" asp-page="/Students/StudentNotes" >Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}