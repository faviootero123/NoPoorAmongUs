@page
@model SaucyCapstone.Pages.Students.IndexModel

<form method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="container rounded">
                    <div class="row pt-4">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span>Student Details</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">First Name</div>
                                <div class="col-9">
                                    <input asp-for="@Model.StudentVM.Students.FirstName" type="text" class="form-control" disabled/>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Last Name</div>
                                <div class="col-9">
                                    <input asp-for="@Model.StudentVM.Students.LastName" type="text" class="form-control" disabled/>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    <input asp-for="@Model.StudentVM.Students.Phone" type="text" class="form-control" disabled/>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Date of Birth</div>
                                <div class="col-9">
                                    <input asp-for="@Model.StudentVM.Students.DateOfBirth" type="date" class="form-control" disabled/>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">School Level</div>
                                <div class="col-9">
                                    <input asp-for="@Model.StudentVM.Students.SchoolLevel" type="text" class="form-control" disabled/>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Determination</div>
                                <div class="col-9">
                                    <input asp-for="@Model.StudentVM.Students.Determination" type="text" class="form-control" disabled/>
                                </div>
                            </div>                       
                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                    <input asp-for="@Model.StudentVM.Students.Address" type="text" class="form-control" disabled/>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Village</div>
                                <div class="col-9">
                                    <input asp-for="@Model.StudentVM.Students.Village" type="text" class="form-control" disabled/>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Lattitude</div>
                                <div class="col-9">
                                    <input asp-for="@Model.StudentVM.Students.Latitude" type="text" class="form-control" disabled/>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Longitude</div>
                                <div class="col-9">
                                    <input asp-for="@Model.StudentVM.Students.Longitude" type="text" class="form-control" disabled/>
                                </div>
                            </div>                         
                            <div class="row my-1">
                                <div class="col-3">Annual Income</div>
                                <div class="col-9">
                                    <input asp-for="@Model.StudentVM.Students.AnnualIncome" type="text" class="form-control" disabled/>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">About</div>
                                <div class="col-9">
                                    <textarea class="form-control" disabled>@Model.StudentVM.Students.NotesAndAbout</textarea>
                                </div>
                            </div>
                            <div class="row my-1 pb-3">

                                <div class="col-3">Food Assist?</div>

                                @if(@Model.StudentVM.Students.FoodAssistance == true)
                                {
                                    <div class="col-3">
                                    <input asp-for="@Model.StudentVM.Students.FoodAssistance" type="text" class="form-check-input" type="checkbox" checked disabled/>
                                    </div>
                                } else
                                {
                                    <div class="col-3">
                                    <input asp-for="@Model.StudentVM.Students.FoodAssistance" type="text" class="form-check-input" type="checkbox" disabled/>
                                    </div>
                                }

                                <div class="col-3">Chappa Assist?</div>

                                @if(@Model.StudentVM.Students.ChappaAssistance == true)
                                {
                                    <div class="col-3">
                                    <input asp-for="@Model.StudentVM.Students.ChappaAssistance" type="text" class="form-check-input" type="checkbox" checked disabled/>
                                    </div>
                                } else
                                {
                                    <div class="col-3">
                                    <input asp-for="@Model.StudentVM.Students.ChappaAssistance" type="text" class="form-check-input" type="checkbox" disabled/>
                                    </div>
                                }

                            </div>
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center">
                                    <span>School Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Accepted Date</div>
                                <div class="col-9">
                                    <input asp-for="@Model.StudentVM.Students.AcceptedDate" type="date" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Status</div>
                                <div class="col-9">
                                    <input asp-for="@Model.StudentVM.Students.Status" type="text" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center">
                                    <span>Guardian Details:</span>
                                </h4>
                            </div>
                            @foreach (var guardian in @Model.StudentVM.Guardians)
                            {
                                <div class="row my-1">
                                    <div class="col-3">First Name</div>
                                    <div class="col-9">
                                        <input asp-for="@guardian.FirstName" type="text" class="form-control" disabled/>
                                    </div>
                                </div>
                                    <div class="row my-1">
                                    <div class="col-3">Last Name</div>
                                    <div class="col-9">
                                        <input asp-for="@guardian.LastName" type="text" class="form-control" disabled/>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Contact Info</div>
                                    <div class="col-9">
                                        <input asp-for="@guardian.ContactInfo" type="text" class="form-control" disabled/>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Relationship</div>
                                    <div class="col-9">
                                        <input asp-for="@guardian.Relation" type="text" class="form-control" disabled/>
                                    </div>
                                </div>
                                <br />
                            }
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1 pb-6">
                            <img src="@Model.StudentVM.Students.ImageUrl"
                             width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
                        </div>                          
                        </div>
                        <button asp-page="/Students/Index" class="btn btn-primary">Go Back</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}