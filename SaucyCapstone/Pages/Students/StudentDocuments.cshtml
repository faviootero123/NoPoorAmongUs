@page
@model SaucyCapstone.Pages.Students.StudentDocumentsModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Documents</h2>
        </div>
    </div>
    <br />
        <div class="float-end">             
        <a asp-page="/Students/addDocuments" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add Document</a>         
     </div>
    
    <br />
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Document Type
            </th>
            <th>
                Upload Date
            </th>
            <th>
                Manage
            </th>
        </tr>
    </thead>
    <tbody>
            
            @if(Model.Documents != null)
            {
            @foreach (var obj in Model.Documents){
            <tr>
                <td width="20%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.Description
                </td>
                <td width="10%">
                    @obj.AccessType.Accesss
                </td>
                <td width="10%">
                    @obj.UploadDate
                </td>
                <td width="10%">
                    <div class="btn-group" role="group">
                        <a class="btn btn-success mx-2" >Edit</a>
                        <a class="btn btn-danger mx-2" >Delete</a>
                    </div>
                </td>
            </tr>
            }
            }
    </tbody>
</table>

 <a class="btn btn-primary" asp-page="/Students/Index" >Go Back</a>


</div>
