@page
@model SaucyCapstone.Pages.Students.Add.addDocumentsModel

<form method="post" enctype="multipart/form-data">
    <input asp-for="StudentDocs.StudentDocId" hidden />
    <input asp-for="StudentDocs.Student" hidden />
    <input asp-for="StudentDocs.AccessType" hidden />
    <div class="container">
        <div class="card">
            <div class="card-body">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span>New Doc</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Topic</div>
                                <div class="col-9">
                                    <input asp-for="@Model.StudentDocs.Name" type="text" class="form-control" />
                                    <span asp-validation-for="@Model.StudentDocs.Name" class="text-danger"></span>
                                </div>
                            </div>
                             <div class="row my-1">
                                <div class="col-3">Content</div>
                                <div class="col-9">
                                    <textarea asp-for="@Model.StudentDocs.Description" class="form-control" ></textarea>
                                    <span asp-validation-for="@Model.StudentDocs.Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <img src="@Model.StudentDocs.Path"
                                     width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
                                <div class="mb-3">
                                    <input asp-for="@Model.StudentDocs.Path" type="file" id="uploadBox" name="file" class="form-control" />

                                </div>
                            </div>


                        </div>
                        <button asp-route-id="@Model.StudentId" type="submit" class="btn btn-success">Create</button>
                        <a class="btn btn-primary" asp-route-id="@Model.StudentId" asp-page="/Students/StudentDocuments" >Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}