@page
@model SaucyCapstone.Pages.Students.addDocumentsModel


<form method="post" enctype="multipart/form-data">
    <input asp-for="studentDoc.StudentDocId" hidden />
    <input asp-for="studentDoc.Student.StudentId" hidden />
    <div class="container">
        <div class="card">
            <div class="card-body">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span>New Document</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Topic</div>
                                <div class="col-9">
                                    <input asp-for="studentDoc.Name" type="text" class="form-control" />
                                    <span asp-validation-for="studentDoc.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Description</div>
                                <div class="col-9">
                                    <textarea asp-for="studentDoc.Description" class="form-control" ></textarea>
                                    <span asp-validation-for="studentDoc.Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">File</div>
                                <div class="col-9">
                                    <input asp-for="studentDoc.DocType.File" type="file" class="form-control" />
                                    <span asp-validation-for="studentDoc.DocType.File" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">Create</button>
                        <a class="btn btn-primary" asp-page="/Students/StudentDocuments" >Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}