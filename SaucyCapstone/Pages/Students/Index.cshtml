@page
@model SaucyCapstone.Pages.Students.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Student Dashboard</h2>
        </div>
    </div>

    <br />
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle float-end" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        Select Class
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="#">English 100</a></li>
        <li><a class="dropdown-item" href="#">English 200</a></li>
        <li><a class="dropdown-item" href="#">English 300</a></li>
      </ul>
    </div>
    <br />
    <br />


<table class="table table-bordered table-striped" style="width:100%">
       
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    School Level
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var student in @Model.Students)
                {
                <tr>
                    <td width="50%">
                        @student.FirstName
                    </td>
                    <td width="30%">
                        @student.SchoolLevel
                    </td>
                    <td>
                        <div class="w-25 btn-group" role="group">
                            <a class="btn btn-success mx-2" asp-page="/Students/StudentDetails" ><i class="bi bi-clipboard2-fill"></i> Details</a>
                            <a class="btn btn-primary mx-2" asp-page="/Students/StudentNotes"><i class="bi bi-pencil-square"></i> Notes</a>
                            <a class="btn btn-info mx-2"  asp-page="/Students/StudentDocuments"> <i class="bi bi-file-earmark-text-fill"></i> Documents</a>
                            <a class="btn btn-warning mx-2" asp-page="/Students/StudentCertificates"> <i class="bi bi-file-earmark-person"></i> Certifications</a>
                            <a class="btn btn-dark mx-2"> <i class="bi bi-calendar"></i>Schedule</a>
                        </div>
                    </td>
                </tr>
                }
        </tbody>
    </table>
</div>