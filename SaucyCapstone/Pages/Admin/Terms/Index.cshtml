@page
@model SaucyCapstone.Pages.Admin.Terms.IndexModel

@{
    ViewData["Title"] = "Terms";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Term[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Term[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Term[0].TermName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Term[0].IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Term) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TermId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TermId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TermId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
