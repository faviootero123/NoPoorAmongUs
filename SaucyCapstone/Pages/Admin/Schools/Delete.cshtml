@page
@model SaucyCapstone.Pages.Admin.Schools.DeleteModel

<form method="post">
    <input type="hidden" asp-for="School.SchoolId" />
    <input type="hidden" asp-for="School.Courses" />
    <div class="card">
        <h4 localize-content class="card-header">Delete School</h4>
        <div class="card-body rounded pb-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row my-1 mb-2 d-flex align-items-center">
                <div localize-content class="col-3 text-end">
                    School Name
                </div>
                <div class="col-9">
                    <div class="form-group">
                        <input id="schoolName" asp-for="School.SchoolName" type="text" class="form-control" readonly/>
                        <span asp-validation-for="School.SchoolName" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-6">
                    <button localize-content type="submit" class="btn btn-danger" style="width:100%">Delete</button>
                </div>
                <div class="col-6">
                    <a localize-content asp-page="./Index" class="btn btn-primary" style="width:100%">
                        Back to School Overview
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <localization-validation-scripts></localization-validation-scripts>
    }
}