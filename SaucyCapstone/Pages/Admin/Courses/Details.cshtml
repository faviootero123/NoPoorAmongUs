@page
@model SaucyCapstone.Pages.Admin.Courses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Term
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseVM.Course.Term.TermName)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Instructor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseVM.Course.Instructor.FirstName) @Html.DisplayFor(model => model.CourseVM.Instructor.LastName)
        </dd>
    </dl>
        <dl class="row">
        <dt class="col-sm-2">
            Subject
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseVM.Course.Subject.SubjectName)
        </dd>
    </dl>
        <dl class="row">
        <dt class="col-sm-2">
            School
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseVM.Course.School.SchoolName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.CourseVM.CourseId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
