@page
@model SaucyCapstone.Pages.Admin.Courses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Course.CourseId" />
            <div class="form-group mb-2">
                <label asp-for="CourseVM.School" class="control-label"></label>
                <select asp-for="CourseVM.School" asp-items="@Model.SchoolList" class="form-select">
                    <option disabled>---Select School---</option>
                </select>
                <span asp-validation-for="CourseVM.School" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CourseVM.Instructor" class="control-label"></label>
                <input asp-for="CourseVM.Instructor" class="form-control" />
                <span asp-validation-for="CourseVM.Instructor" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CourseVM.Subject" class="control-label"></label>
                <input asp-for="CourseVM.Subject" class="form-control" />
                <span asp-validation-for="CourseVM.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
