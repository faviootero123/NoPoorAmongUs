@page
@model SaucyCapstone.Pages.Admin.Courses.CreateModel

<form method="post">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="container rounded">
                    <div class="row">
                        <div class="col-12 pb-2">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span>Create Course</span>
                                </h4>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="CourseVM.Course.CourseId" />
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Term</div>
                                <div class="col-9">
                                    <div class="form-group mb-2">
                                        <select asp-for="CourseVM.TermId" asp-items="@Model.CourseVM.TermList" class="form-select">
                                            <option disabled selected>---Select Term---</option>
                                        </select>
                                        <span asp-validation-for="CourseVM.TermId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Instructor</div>
                                <div class="col-9">
                                    <div class="form-group mb-2">
                                        <select asp-for="CourseVM.FacultyMemberId" asp-items="@Model.CourseVM.InstructorList" class="form-select">
                                            <option disabled selected>---Select Instructor---</option>
                                        </select>
                                        <span asp-validation-for="CourseVM.FacultyMemberId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Subject</div>
                                <div class="col-9">
                                    <div class="form-group mb-2">
                                        <select asp-for="CourseVM.SubjectId" asp-items="@Model.CourseVM.SubjectList" class="form-select">
                                            <option disabled selected>---Select Subject---</option>
                                        </select>
                                        <span asp-validation-for="CourseVM.SubjectId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">School</div>
                                <div class="col-9">
                                    <div class="form-group mb-2">
                                        <select asp-for="CourseVM.SchoolId" asp-items="@Model.CourseVM.SchoolList" class="form-select">
                                            <option disabled selected>---Select School---</option>
                                        </select>
                                        <span asp-validation-for="CourseVM.SchoolId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-6">
                            <button type="submit" class="btn btn-success" style="width:100%">Create</button>
                        </div>
                        <div class="col-6">
                            <a asp-page="Index" class="btn btn-danger" style="width:100%">
                                Back to Course Overview
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
