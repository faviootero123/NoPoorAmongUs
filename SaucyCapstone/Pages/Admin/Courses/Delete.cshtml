@page
@model SaucyCapstone.Pages.Admin.Courses.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Term
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseVM.Course.Term.TermName)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Instructor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseVM.Course.Instructor.FirstName) @Html.DisplayFor(model => model.CourseVM.Course.Instructor.LastName)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Subject
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseVM.Course.Subject.SubjectName)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            School
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseVM.Course.School.SchoolName)
        </dd>
    </dl>    
    <form method="post">
        <input type="hidden" asp-for="CourseVM.Course.CourseId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
