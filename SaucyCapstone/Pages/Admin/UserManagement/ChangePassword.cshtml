@page
@model SaucyCapstone.Pages.Admin.UserManagement.ChangePassword
@{
    ViewData["Title"] = "ChangePassword";
}

<form method="post">
    <div class="card">
        <h4 class="card-header">Change Password</h4>
        <div class="card-body rounded pb-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row my-1 mb-2 d-flex align-items-center">
                <div class="col-3 text-end">
                    Password
                </div>
                <div class="col-9">
                    <div class="form-group">
                        <input id="password" asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row my-1 mb-2 d-flex align-items-center">
                <div class="col-3 text-end">
                    Confirm Password
                </div>
                <div class="col-9">
                    <div class="form-group">
                        <input id="confirmPassword" asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-success" style="width:100%">Reset</button>
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-primary" style="width:100%">
                            Back to User Overview
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}