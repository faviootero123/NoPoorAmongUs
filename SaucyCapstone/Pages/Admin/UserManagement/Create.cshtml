@page
@using SaucyCapstone.Constants;
@model SaucyCapstone.Pages.Admin.UserManagement.CreateModel
@{
    ViewData["Title"] = "New User";
}

<h1>User</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h2>Create a new user.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                    aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="new-password"
                    aria-required="true" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <h3>Roles</h3>
            <div class="form-check">
                <input type="checkbox"  asp-for="Input.Admin" class="form-check-input"
                    value="true">
                <label class="form-check-label" asp-for="Input.Admin">@Roles.Admin</label>
            </div>
            <div class="form-check">
                <input type="checkbox" asp-for="Input.Instructor" class="form-check-input" value="true">
                <label class="form-check-label" asp-for="Input.Instructor">@Roles.Instructor</label>
            </div>
            <div class="form-check">

                <input type="checkbox"  asp-for="Input.Rater" class="form-check-input" value="true">
                <label class="form-check-label" asp-for="Input.Rater">@Roles.Rater</label>
            </div>
            <div class="form-check">
                <input type="checkbox" asp-for="Input.SocialWorker" class="form-check-input" value="true">
                <label class="form-check-label" asp-for="Input.SocialWorker">@Roles.SocialWorker</label>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}