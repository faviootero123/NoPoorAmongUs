@page
@model SaucyCapstone.Pages.Sessions.IndexModel
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Session Overview</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Upsert" id="CreateBtn" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; New Session
            </a>
            <a asp-page="ViewArchived" id="CreateBtn" class="btn btn-danger">
                <i class="bi bi-plus-circle"></i> &nbsp; View Archived
            </a>
        </div>
    </div>
    <br />

    <table id="dataTable" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Day of Week</th>
                <th>Time</th>
                <th>Term</th>
                <th>Session Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var session in Model.Sessions)
            {
                <tr>
                    <td width="25%">
                        @Html.DisplayFor(modelItem => session.Course.Subject.SubjectName)
                    </td>
                    <td width="15%">
                        @Html.DisplayFor(modelItem => session.DayofWeek)
                    </td>
                    <td width="15%">
                        @session.StartTime.ToShortTimeString() - @session.EndTime.ToShortTimeString()
                    </td>
                    <td width="15%">
                        @Html.DisplayFor(modelItem => session.Course.Term.TermName)
                    </td>
                    <td>
                        <div class="btn-group" role="group" style="justify-content:end">
                            <a class="btn btn-success mx-2" asp-page="./Enrollments" asp-route-id="@session.SessionId"><i class="bi bi-people-fill"></i>&nbsp;Enrollments</a>
                            <a class="btn btn-primary mx-2" asp-page="./Upsert" asp-route-id="@session.SessionId"><i class="bi bi-pen-fill"></i>&nbsp;Edit</a>
                            <a class="btn btn-danger mx-2" asp-page="./Archive" asp-route-id="@session.SessionId"><i class="bi bi-archive-fill"></i>&nbsp;Archive</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            $('#dataTable').dataTable();
        });
    </script>
}