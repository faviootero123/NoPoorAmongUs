@page
@model SaucyCapstone.Pages.Sessions.ArchiveModel
@{
}
<form method="post">
    @if(Model.Session.isActive == true)
    {
<div>
    <h3>Are you sure you want to archive this course?</h3>
    <input type="hidden" asp-for="Session.SessionId" />
       <input type="submit" value="Archive" class="btn btn-danger" /> 
      <a class="btn btn-success" asp-page="./Index">No</a>
</div>
    }
        @if(Model.Session.isActive == false)
    {
        <div>
    <h3>Are you sure you want to activate this course?</h3>
    <input type="hidden" asp-for="Session.SessionId" />
       <input type="submit" value="Activate" class="btn btn-success" /> 
      <a class="btn btn-success" asp-page="./Index">No</a>
</div>
    }
</form>